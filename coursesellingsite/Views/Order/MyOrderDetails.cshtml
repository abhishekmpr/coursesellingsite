@model List<BuyNowViewModel>

@{
    ViewData["Title"] = "My Orders";
}

<div class="container mt-5">
    <h2>My Orders</h2>

    @if (Model != null && Model.Any())
    {
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Order ID</th>
                    <th>Course Title</th>
                    <th>Course Price</th>
                    <th>Order Price</th>
                    <th>Order Date</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var order in Model)
                {
                    <tr>
                        <td>@order.OrderId</td>
                        <td>@order.CourseTitle</td>
                        <td>@order.CoursePrice.ToString("C")</td> <!-- Format as currency -->
                        <td>@order.Price.ToString("C")</td> <!-- Format as currency -->
                        <td>@order.OrderDate.ToString("MM/dd/yyyy")</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>You have not made any orders yet.</p>
    }

    <a href="@Url.Action("Index", "Home")" class="btn btn-primary">Back to Home</a>
</div>
