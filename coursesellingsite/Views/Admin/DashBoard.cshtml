@{
    ViewData["Title"] = "Admin Dashboard";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@section Scripts {
    <script>
        document.getElementById("courseSearch").addEventListener("keyup", function () {
            let input = this.value.toLowerCase();
            this.style.backgroundColor = "red";
            let rows = document.querySelectorAll("#courseTable tbody tr");

            rows.forEach(row => {
                let text = row.innerText.toLowerCase();
                row.style.display = text.includes(input) ? "" : "none";
            });
        });
    </script>
}


<h2>Welcome to Admin Dashboard</h2>

<div class="row">

    @foreach (var user in ViewBag.Users)
    {
        <div class="col-md-4">
            <div class="card text-white bg-primary mb-3">
                <div class="card-header">User</div>
                <div class="card-body">
                    <h4 class="card-title">@user.Name</h4>
                    <h5 class="card-subtitle">@user.Email</h5>
                </div>
            </div>
        </div>
    }

    <div class="col-md-4">
        <div class="card text-white bg-success mb-3">
            <div class="card-header">Total Courses</div>
            <div class="card-body">
                <h4 class="card-title">@ViewBag.TotalCourses</h4>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card text-white bg-primary mb-3">
            <div class="card-header">Pending Approvals</div>
            <div class="card-body">
                <h4 class="card-title">@ViewBag.PendingApprovals</h4>
            </div>
        </div>
    </div>
</div>




    <!-- Search Box -->
    <div class="mb-3">
        <input type="text" id="courseSearch" class="form-control" placeholder="Search courses by title, category, or language..." />
    </div>

    <div class="table-responsive">
        <table class="table table-bordered table-hover table-striped" id="courseTable">
            <thead class="table-dark">
                <tr>
                    <th>Title</th>
                    <th>Description</th>
                    <th>Category</th>
                    <th>Name</th>
                    <th>Language</th>
                    <th>Level</th>
                    <th>Price</th>
                    <th>Selling Price</th>
                    <th>Video</th>
                    <th>Image</th>
                    <th>Created By</th>
                    <th>Created On</th>
                    <th>Last Update</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var course in ViewBag.Previewdetails)
                {
                    <tr>
                        <td>@course.CourseTitle</td>
                        <td>@course.CourseDescription</td>
                        <td>@course.RelatedCategory</td>
                        <td>@course.CourseName</td>
                        <td>@course.UsedLanguage</td>
                        <td>@course.CourseLevel</td>
                        <td>@course.CoursePrice</td>
                        <td>@course.SellingPrice</td>
                        <td>
                            @if (!string.IsNullOrEmpty(course.PreviewDemoVideoPath))
                            {
                                <video width="150" controls>
                                    <source src="@course.PreviewDemoVideoPath" type="video/mp4" />
                                    Your browser does not support the video tag.
                                </video>
                            }
                        </td>
                        <td>
                            @if (!string.IsNullOrEmpty(course.Pic))
                            {
                                <img src="@course.Pic" width="100" class="img-thumbnail" />
                            }
                        </td>
                        <td>@course.CreatedBy</td>
                        <td>@course.CreatedOn.ToString("dd MMM yyyy")</td>
                        <td>@course.LastUpdate.ToString("dd MMM yyyy")</td>
                        <td>
                            <a href="@Url.Action("EditCoursePreview", "Admin", new { id = course.Id })" class="btn btn-warning btn-sm">Edit</a>
                            <a href="@Url.Action("DeleteCoursePreview", "Admin", new { id = course.Id })" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this?');">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        </div>
   


