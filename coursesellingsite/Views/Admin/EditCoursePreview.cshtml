@model AddCoursePreviewDetail
@{
    ViewBag.Title = "Add Course Preview";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="mt-3">Edit Course Preview Detail</h2>

<div class="alert alert-danger">@Html.Raw(TempData["errors"] ?? "")</div>
<div class="alert alert-success">@Html.Raw(TempData["success"] ?? "")</div>

<div class="col-sm-10 mt-4">
    <form asp-action="EditPreviewDetail" asp-controller="Admin" enctype="multipart/form-data" method="post">
        <!-- Course Title Dropdown -->
        <div class="mb-3">
            <label asp-for="CourseTitle" class="form-label">Course Title</label>
            <input asp-for="CourseTitle" class="form-control" />
            <span asp-validation-for="CourseTitle" class="text-danger"></span>
        </div>

        <!-- Course Description -->
        <div class="mb-3">
            <label asp-for="CourseDescription" class="form-label">Course Description</label>
            <textarea asp-for="CourseDescription" class="form-control"></textarea>
            <span asp-validation-for="CourseDescription" class="text-danger"></span>
        </div>

        <!-- Related Category Dropdown -->
        <div class="mb-3">
            <label asp-for="RelatedCategory" class="form-label">Course Category</label>
            <input asp-for="RelatedCategory" class="form-control" />
            <span asp-validation-for="RelatedCategory" class="text-danger"></span>
        </div>

        <!-- Course Name -->
        <div class="mb-3">
            <label asp-for="CourseName" class="form-label">Course Name</label>
            <input asp-for="CourseName" class="form-control" />
            <span asp-validation-for="CourseName" class="text-danger"></span>
        </div>

        <!-- Created By -->
        <div class="mb-3">
            <label asp-for="CreatedBy" class="form-label">Created By</label>
            <input asp-for="CreatedBy" class="form-control" />
            <span asp-validation-for="CreatedBy" class="text-danger"></span>
        </div>

        <!-- Used Language -->
        <div class="mb-3">
            <label asp-for="UsedLanguage" class="form-label">Used Language</label>
            <input asp-for="UsedLanguage" class="form-control" />
            <span asp-validation-for="UsedLanguage" class="text-danger"></span>
        </div>

        <!-- Selling Mode -->
        <div class="mb-3">
            <label asp-for="SellingMode" class="form-label">Selling Mode</label>
            <input asp-for="SellingMode" class="form-control" />
            <span asp-validation-for="SellingMode" class="text-danger"></span>
        </div>

        <!-- Course Price -->
        <div class="mb-3">
            <label asp-for="CoursePrice" class="form-label">Course Price</label>
            <input asp-for="CoursePrice" type="number" step="0.01" class="form-control" />
            <span asp-validation-for="CoursePrice" class="text-danger"></span>
        </div>

        <!-- Selling Price -->
        <div class="mb-3">
            <label asp-for="SellingPrice" class="form-label">Selling Price</label>
            <input asp-for="SellingPrice" type="number" step="0.01" class="form-control" />
            <span asp-validation-for="SellingPrice" class="text-danger"></span>
        </div>

        <!-- Preview Demo Video -->
        <div class="mb-3">
            <label asp-for="PreviewDemoVideo" class="form-label">Preview Demo Video</label>
            <input asp-for="PreviewDemoVideo" type="file" class="form-control" />
            <span asp-validation-for="PreviewDemoVideo" class="text-danger"></span>
        </div>

        <!-- Course Level -->
        <div class="mb-3">
            <label asp-for="CourseLevel" class="form-label">Course Level</label>
            <input asp-for="CourseLevel" class="form-control" />
            <span asp-validation-for="CourseLevel" class="text-danger"></span>
        </div>

        <!-- Pre-requirement -->
        <div class="mb-3">
            <label asp-for="PreRequirement" class="form-label">Pre-requirement</label>
            <textarea asp-for="PreRequirement" class="form-control"></textarea>
            <span asp-validation-for="PreRequirement" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="PicFile" class="form-label">Course Image</label>
            <input asp-for="PicFile" type="file" accept="image/*" class="form-control">
            <span asp-validation-for="PicFile" class="text-danger"></span>
        </div>


        <!-- Hidden fields for CreatedOn and LastUpdate (set automatically in POST) -->
        <input asp-for="CreatedOn" type="hidden" />
        <input asp-for="LastUpdate" type="hidden" />

        <!-- Submit Button -->
        <div class="mb-3">
            <button type="submit" class="btn btn-success"> Edit Now</button>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
